<% provide(:title, 'Register') %>
<div class="clearfix_50"></div>
<div class="ink-grid">
  <div class="column-group push-center push-middle bottom-space half-top-padding">
    <div class="Register all-60 push-center push-middle padding">
      <div class="align-center"><h1>Update Account</h1></div>
      <!-- <form class="ink-form"> -->
      <%= form_for(@user, :html => {:class => "ink-form"}) do |f| %>
          <div class="all-80 push-center push-middle">
            <%= render 'shared/error_messages' %>
          </div>
          <div class="all-90 push-center push-middle">
            <fieldset>
              <div class="control-group">
                <%= f.label :name, :class => "all-20 align-right" %>
                <div class="control all-100">
                  <%= f.text_field :name, :class => 'form-control', :placeholder => 'Please enter your name'%>
                </div>
                <!--<p class="tip">Enter your name</p>-->
              </div>
              <div class="control-group">
                <%= f.label :email, :class => "all-20 align-right" %>
                <div class="control all-100">
                  <%= f.email_field :email, :class => 'form-control', :placeholder => 'Please enter your email'%>
                </div>
                <p class="tip">Must be valid email</p>
              </div>
              <div class="control-group">
                <%= f.label :password, :class => "all-20 align-right" %>
                <div class="control all-100">
                  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Please enter a password'%>
                </div>
                <p class="tip">Must be a minimum of 6 characters</p>
              </div>
              <div class="control-group">
                <%= f.label :password_confirmation, :class => "all-20 align-right" %>
                <div class="control all-100 required">
                  <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Please confirm your password'%>
                </div>
                <!--<p class="tip">Please confirm your password</p>-->
              </div>
            </fieldset>
            <div class="all-100 push-middle bottom-space">
              <%= f.submit "Update Account", class: "ink-button all-100 blue"%>
            </div>
          </div>
      <% end %>

    </div>
  </div>
</div>